{# templates/admin/field/collection_reservations.html.twig #}
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Réservations ({{ field.value|length }})</h5>
    </div>
    <div class="card-body p-0">
        {% if field.value|length > 0 %}
            <table class="table table-sm table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Date début</th>
                        <th>Date fin</th>
                        <th>Circuit</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                    {% for reservation in field.value %}
                        <tr>
                            <td>{{ reservation.id }}</td>
                            <td>{{ reservation.dateDebut|date('d/m/Y') }}</td>
                            <td>{{ reservation.dateFin|date('d/m/Y') }}</td>
                            <td>{{ reservation.circuit.titre|default('N/A') }}</td>
                            <td>
                                {% if reservation.statut %}
                                    <span class="badge bg-success">Confirmée</span>
                                {% else %}
                                    <span class="badge bg-warning">En attente</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="text-center py-4 text-muted">
                <i class="fas fa-calendar-times fa-2x mb-2"></i>
                <p>Aucune réservation</p>
            </div>
        {% endif %}
    </div>
</div>